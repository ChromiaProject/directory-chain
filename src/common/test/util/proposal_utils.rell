
function last_proposal(): proposal {
    return proposal @ { .state == proposal_state.PENDING } ( @omit @sort_desc .timestamp, $) limit 1;
}

function vote_for_last_proposal(approver: rell.test.keypair) {
    val proposal_id = (proposal @ { .state == proposal_state.PENDING } .rowid limit 1).to_integer();
    rell.test.tx().op(
        make_vote(approver.pub, proposal_id, true)
    ).sign(approver.priv).run();
}
