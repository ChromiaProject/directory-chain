
entity node {
	index provider;
	key pubkey;
	mutable active: boolean = true;
	mutable host: text;
	mutable port: integer;
	mutable api_url: text; // NEW. Need API port to connect client to a node.
	mutable last_updated: timestamp;
}

struct node_info {
	pubkey;
	host: text;
	port: integer;
	api_url: text;
}

object node_list {
	mutable last_update: timestamp = 0;
}
